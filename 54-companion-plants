public Boolean companionPlants(String plant1, String plant2) {
    Boolean returnResponse;
    if (plant1 == 'onions' && plant2 != 'cucumbers') {
        returnResponse = true;
    } else if (plant1 != 'cucumbers' && plant2 == 'onions') {
        returnResponse = true;
    } else if (plant1 == 'cucumbers' && plant2 == 'lettuce') {
        returnResponse = true;
    } else if (plant1 == 'lettuce' && plant2 == 'cucumbers') {
        returnResponse = true;
    }