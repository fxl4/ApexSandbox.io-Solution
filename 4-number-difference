public Integer diff(Integer a, Integer b) {
    if(a > b){
        difference = a - b;
        return difference;
    } else if(a < b){
        difference = b - a;
        return difference;
    } else if(a == b){
        difference = 0;
        return difference;
    } else if(a == 0){
        difference = b;
        return difference;
    } else if(b == 0){
        difference = a;
        return difference;
    } 
}