public Integer diff(Integer a, Integer b) {
    if(a > b){
        Integer difference = a - b;
        return difference;
    } else if(a < b){
        Integer difference = b - a;
        return difference;
    } else if(a == b){
        Integer difference = 0;
        return difference;
    } else if(a == 0){
        Integer difference = b;
        return difference;
    } else if(b == 0){
        Integer difference = a;
        return difference;
    } 
}