public Integer diff(Integer a, Integer b) {
    if (a > b) {
        return Math.abs(a - b);
    } else if (a < b) {
        return Math.abs(b - a);
    } else if (a == b) {
        return 0;
    } else if (a == 0) {
        return Math.abs(b);
    } else if (b == 0) {
        return Math.abs(a)
    } 
}

