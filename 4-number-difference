public Integer diff(Integer a, Integer b) {
    if(a > b){
        Integer diff = a - b;
        return Integer diff;
    } else if(a < b){
        Integer diff =  b - a;
        return Integer diff;
    } else if(a == b){
        Integer diff = 0;
        return Integer diff;
    } else if(a == 0){
        Integer diff = b;
        return Integer diff;
    } else if(b == 0){
        Integer diff = a;
        return Integer diff;
    } 
}