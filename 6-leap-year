public Boolean isLeapYear(Integer year) {
    Boolean leapYearDetermination;
    Double divByOneHundredRemainder = year / 100;
    Double divByFourHundredRemainder = year / 400;
    
    if (year / 4 == 0) {
        leapYearDetermination = true;
    } else if (divByOneHundredRemainder % 1 == 0 && divByFourHundredRemainder % 1 == 0) {
        leapYearDetermination = true;
    } else {
        leapYearDetermination = false;
    }
    return leapYearDetermination;
}
