public String aOrAn(String word) {
    //code here
    if (word.charAt(0) == 'a' || word.charAt(0) == 'e' || word.charAt(0) == 'i' || word.charAt(0) == 'o' || word.charAt(0) == 'u') {
        word = 'an ' + word;
        return word;
    } else {
        word = 'a ' + word;
        return word;
    }
}