public String changeTimeFormat(String strTime) {
    String militaryTime;
    if (strTime.contains('p') || strTime.contains('P')) {
        // if PM do this
        strTime = strTime.replace(' PM', '');
        String[] timeList = strTime.split(":");
        Integer hourTime = timeList[0] + 12;
        hourTime = hourTime.toString();
        String minuteTime = timeList[1];
        militaryTime = hourTime + minuteTime;
    } else {
        // if AM do this
        // string methods to remove : and then space AM
    }
    return militaryTime;
}