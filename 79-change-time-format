public String changeTimeFormat(String strTime) {
    String standardTime;
    String[] checkedHours = strTime.split(':');
    Integer checkedHour = parseInt(checkedHours[0]);
    String checkedMinute = checkedHours[1];
    if (checkedHour >= 12) {
        // if PM do this
        checkedHour = checkedHour + 12;
        checkedHour = checkedHour.toString();
        checkedMinute = timeList[1] + ' PM';
        standardTime = hourTime + minuteTime;
    } else {
        // if AM do this
        // string methods to + ' AM' to end of string.
        standardTime = hourTime + minuteTime + ' AM';
    }
    return standardTime;
}